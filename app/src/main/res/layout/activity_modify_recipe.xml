<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modifyRecipe"
    android:padding="15dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_shade"
        android:gravity="center"
        android:text="Modify Recipe"
        android:textColor="#DC8080"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="TITLE"
        android:textColor="#CEB17B99"
        android:textSize="22sp" />

    <EditText

        android:id="@+id/etMTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter title of recipe"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Summary"
        android:textColor="#CEB17B99"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/etMSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter summary of recipe"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Ingredients"
        android:textColor="#CEB17B99"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/etMIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter ingredients required"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_inline"
        android:text="Details"
        android:textColor="#CEB17B99"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/etMDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter details of recipe"
        android:inputType="textPersonName" />

    <Button

        android:id="@+id/btnMRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify Recipe" />

</LinearLayout>